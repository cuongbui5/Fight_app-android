<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
   android:id="@+id/bottomSheetFare"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="10dp"
    app:behavior_hideable="false"
    app:behavior_peekHeight="0dp"
    app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hạng ghế"
            android:textSize="20sp"
            android:fontFamily="@font/manrope_bold"
            android:gravity="center"
            android:padding="10dp"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray2"
            />


        <RadioGroup
            android:id="@+id/rgFare"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

                <RadioButton
                    android:id="@+id/rbEconomy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Economy"
                    android:fontFamily="@font/manrope_bold"
                    android:textSize="20sp"
                    app:buttonTint="@color/primary"

                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/manrope_medium"
                    android:textSize="16sp"
                    android:layout_marginStart="30dp"
                    android:text="Bay tiếp kiệm, đáp ứng nhu cầu cơ bản của bạn."
                    />



                <RadioButton
                    android:id="@+id/rbPremiumEconomy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Premium Economy"
                    android:fontFamily="@font/manrope_bold"
                    android:textSize="20sp"
                    app:buttonTint="@color/primary"

                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/manrope_medium"
                    android:textSize="16sp"
                    android:layout_marginStart="30dp"
                    android:text="Chi phí hợp lý với bữa ăn ngon và chỗ để chân rộng rãi."
                    />


                <RadioButton
                    android:id="@+id/rbBusiness"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Business"
                    android:fontFamily="@font/manrope_bold"
                    android:textSize="20sp"
                    app:buttonTint="@color/primary"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/manrope_medium"
                    android:textSize="16sp"
                    android:layout_marginStart="30dp"
                    android:text="Bay đẳng cấp, với quầy làm thủ tục và khu ghế ngồi riêng."
                    />


                <RadioButton
                    android:id="@+id/rbFirstClass"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="First Class"
                    android:fontFamily="@font/manrope_bold"
                    android:textSize="20sp"
                    app:buttonTint="@color/primary"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/manrope_medium"
                    android:textSize="16sp"
                    android:layout_marginStart="30dp"
                    android:text="Hạng cao cấp nhất, với du lịch 5 sao được cá nhân hóa."
                    />

        </RadioGroup>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnChooseFare"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/manrope_bold"
            android:text="Xong"
            android:textColor="@color/white"
            android:background="@drawable/button_background"
            android:layout_marginTop="20dp"
            android:textSize="20sp"

            />




    </LinearLayout>

</androidx.cardview.widget.CardView>