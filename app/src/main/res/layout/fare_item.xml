<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp"
    app:cardUseCompatPadding="true">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/ivAirlineFare"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/icon_airline"
                        />

                    <TextView

                        android:id="@+id/tvAirlineName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="14dp"
                        android:text="Vietnam Airlines"
                        android:textSize="12sp"
                        android:layout_marginStart="5dp"
                        android:fontFamily="@font/manrope_medium"/>

                </LinearLayout>



                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvFlightCodeFare"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:text="VN-GD28"
                        android:fontFamily="@font/manrope_medium"
                        android:textSize="10sp" />

                    <TextView
                        android:id="@+id/tvAircraftTypeFare"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Airbus Ai20"
                        android:fontFamily="@font/manrope_medium"
                        android:textSize="10sp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2.5"
                android:orientation="horizontal"
                android:gravity="center">

                <!-- Thời gian khởi hành -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvDepartureDateFare"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:gravity="start"
                        android:text="10/06/2023"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tvDepartureTimeFare"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="14dp"
                        android:gravity="start"
                        android:text="07:00"
                        android:textColor="@android:color/holo_blue_light"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/tvDepartureAirportFare"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="22dp"
                        android:gravity="start"
                        android:text="HAN"
                        android:fontFamily="@font/manrope_medium"
                        android:textSize="14sp" />
                </LinearLayout>

                <!-- Thời gian bay -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="start">

                    <TextView
                        android:id="@+id/tvDuration"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2h5m"
                        android:layout_marginRight="1dp"
                        android:layout_marginTop="5dp"
                        android:textSize="14sp"
                        android:fontFamily="@font/manrope_medium"
                        android:gravity="start"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="4dp"
                        android:layout_marginBottom="4dp"
                        android:background="@android:color/darker_gray"
                        android:gravity="start"/>

                    <TextView
                        android:id="@+id/text_direct"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="Direct"
                        android:textSize="12sp"
                        android:fontFamily="@font/manrope_medium"

                        android:gravity="start"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="start">

                    <TextView
                        android:id="@+id/tvArrivalDateFare"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="10/05/2023"
                        android:textSize="12sp"
                        android:layout_marginLeft="5dp"
                        android:gravity="start"/>

                    <TextView
                        android:id="@+id/tvArrivalTimeFare"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="09:15"
                        android:textColor="@android:color/holo_blue_light"
                        android:textSize="18sp"
                        android:layout_marginLeft="16dp"
                        android:gravity="start"/>

                    <TextView
                        android:id="@+id/tvArrivalAirportFare"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="SGN"
                        android:textSize="14sp"
                        android:layout_marginLeft="23dp"
                        android:fontFamily="@font/manrope_medium"
                        android:gravity="start"/>
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:background="@android:color/darker_gray"
            android:gravity="start"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvDetailFare"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Xem chi tiết"
                    android:fontFamily="@font/manrope_medium"
                    android:textColor="@color/primary"
                    android:textSize="16sp"/>

            </LinearLayout>



                <TextView
                    android:id="@+id/tvPriceFare"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1,500,000 VND"
                    android:textStyle="bold"
                    android:textColor="@color/red"
                    android:fontFamily="@font/manrope_bold"
                    android:textSize="16sp"/>

        </LinearLayout>


    </LinearLayout>
</androidx.cardview.widget.CardView>